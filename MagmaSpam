_G.AutoMagma = true -- Enable the AutoMagma loop

while _G.AutoMagma do
    local args = {
        [1] = getsenv(game:GetService("Players").LocalPlayer.Character.Powers.Magma).VTCmel,
        [2] = "MagmaPower7",
        [3] = "StopCharging",
        [4] = CFrame.new(rootPart.Position) * CFrame.Angles(-1.6409629583358765, 0.15992283821105957, 1.986436367034912),
        [5] = workspace.IslandTown.Grass.Grass,
        [6] = 100
    }
    
    player.Character.Powers.Magma.RemoteEvent:FireServer(unpack(args))
    
    -- Delay between each iteration of the loop
    wait(1) -- Adjust the delay time as needed
end
