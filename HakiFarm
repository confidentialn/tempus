local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local LocalPlayer = Players.LocalPlayer
local pl = tostring(LocalPlayer.UserId)
local lv = Workspace.UserData["User_"..pl].Data.HakiLevel.Value

_G.HakiFarm = true

while _G.HakiFarm do
    if _G.HakiFarm then
        Workspace.UserData["User_"..pl].III:FireServer("On", lv)
        Workspace.UserData["User_"..pl].III:FireServer("On", lv)
        Workspace.UserData["User_"..pl].III:FireServer("Off", lv)
        Workspace.UserData["User_"..pl].III:FireServer("Off", lv)
    else
        break -- Exit the loop if _G.HakiFarm is false
    end

    wait() -- Add a small delay between iterations to prevent excessive server requests
end
