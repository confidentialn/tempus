local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")

local pl = tostring(Players.LocalPlayer.UserId)
local lv = Workspace.UserData["User_" .. pl].Data.HakiLevel.Value

_G.HakiFarm = true

while _G.HakiFarm do
    for i = 1, 1500 do
        if _G.HakiFarm then
            Workspace.UserData["User_" .. pl].III:FireServer("On", lv)
            wait()
            Workspace.UserData["User_" .. pl].III:FireServer("Off", lv)
        else
            break -- Exit the inner loop if _G.HakiFarm is false
        end
    end
    if not _G.HakiFarm then
        break -- Exit the outer loop if _G.HakiFarm is false
    end
end
